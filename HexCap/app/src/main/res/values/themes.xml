<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HexCap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenslate</item>
        <item name="colorPrimaryVariant">@color/greenslatedark</item>
        <item name="colorOnPrimary">@color/crimson</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HexCap.Searchview">
        <item name="android:textColorHint">@color/silver</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textSize">12dp</item>
        <item name="iconTint">@color/gainsboro</item>
    </style>

    <style name="BottomRoundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
    </style>

    <style name="RoundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
    </style>

    <style name="TaglineItem">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>