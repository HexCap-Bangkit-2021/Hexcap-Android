<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/k2d_regular"
        android:textStyle="bold"
        android:text="Hello, Siap untuk bereksplorasi dengan Candhi?"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:text="Top Temple Destination"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_temple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:listitem="@layout/item_temple_destination" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Article Categories"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_temple" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tips"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:minWidth="0dp"
        app:icon="@drawable/ic_tips"
        app:iconTint="@null"
        app:iconPadding="0dp"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:backgroundTint="@color/white"
        app:strokeColor="@color/greenslate"
        app:strokeWidth="2dp"
        app:elevation="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_funfact"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_funfact"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:minWidth="0dp"
        app:icon="@drawable/ic_funfact"
        app:iconTint="@null"
        app:iconPadding="0dp"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:backgroundTint="@color/white"
        app:strokeColor="@color/greenslate"
        app:strokeWidth="2dp"
        app:elevation="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_history"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_tips"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_history"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:minWidth="0dp"
        app:icon="@drawable/ic_history"
        app:iconTint="@null"
        app:iconPadding="0dp"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:backgroundTint="@color/white"
        app:strokeColor="@color/greenslate"
        app:strokeWidth="2dp"
        app:elevation="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_testimonial"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_funfact"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_testimonial"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:minWidth="0dp"
        app:icon="@drawable/ic_testimonial"
        app:iconTint="@null"
        app:iconPadding="0dp"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:backgroundTint="@color/white"
        app:strokeColor="@color/greenslate"
        app:strokeWidth="2dp"
        app:elevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_history"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>